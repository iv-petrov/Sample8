@{
    ViewData["Title"] = "Home Page";
}
@model CompaniesList

<h1>Список зарегистрированных компаний</h1>
<div>
<table width="100%">
    <tr><th>Наименование</th><th>ИНН</th><th>Email</th><th> </th></tr>
    @foreach (var company in Model)
    {
        <tr>
            <td> <a href="Update/@company.Id"> @company.Name </a></td>
            <td> @company.Inn </td>
            <td> @company.Email </td>
            <td> <a href="Delete/@company.Id" onclick="return confirm('Подтверждаете удаление?');"> Удалить </a> </td>
        </tr>
    }
</table>
<p> </p>
</div>
<div><a href="Append"> Добавить компанию </a></div>